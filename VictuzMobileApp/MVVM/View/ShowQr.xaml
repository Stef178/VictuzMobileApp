<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VictuzMobileApp.MVVM.View.ShowQr"
             Title="ShowQr">
    <VerticalStackLayout>
        <Label
            Text="Toon deze QR-code bij binnenkomst"
            FontSize="20"
            Margin="0,20,0,0"/>

        <Image
            Margin="0,20,0,0"
            x:Name="QR"
            WidthRequest="100"
            HeightRequest="100"/>

        <Button
            Margin="0,20,0,0"
            Text="Terug"
            Clicked="OnBackClicked"
            HeightRequest="30"
            WidthRequest="140"/>


    </VerticalStackLayout>
</ContentPage>