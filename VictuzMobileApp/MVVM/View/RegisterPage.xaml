<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VictuzMobileApp.MVVM.View.RegisterPage"
             Title="Account aanmaken">

    <ScrollView Margin="20">
        
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
            
            <Label Text="Victuz - Registreren" 
                   FontSize="24" 
                   HorizontalOptions="Center" 
                   TextColor="Black" />

            
            <Label Text="Gebruikersnaam:" 
                   FontAttributes="Bold" />
            
            <Entry x:Name="UsernameEntry" 
                   Placeholder="Voer je gebruikersnaam in" />

            
            <Label Text="E-mail:" 
                   FontAttributes="Bold" />
            
            <Entry x:Name="EmailEntry" 
                   Placeholder="Voer je e-mailadres in" 
                   Keyboard="Email" />

            
            <Label Text="Telefoonnummer:" 
                   FontAttributes="Bold" />
            
            <Entry x:Name="PhoneNumberEntry" 
                   Placeholder="+31 " 
                   Keyboard="Telephone" />

            
            <Label Text="Wachtwoord:" 
                   FontAttributes="Bold" />
            
            <Entry x:Name="PasswordEntry" 
                   Placeholder="Voer je wachtwoord in" 
                   IsPassword="True" />

            
            <Label Text="Bevestig wachtwoord:" 
                   FontAttributes="Bold" />
            
            <Entry x:Name="ConfirmPasswordEntry" 
                   Placeholder="Bevestig je wachtwoord" 
                   IsPassword="True" />

            
            <Button Text="Account aanmaken" 
                    Clicked="OnAccountAanmakenClicked" 
                    BackgroundColor="DarkCyan" 
                    TextColor="White" 
                    CornerRadius="10" 
                    HeightRequest="50" />
            
        </VerticalStackLayout>
        
    </ScrollView>
    
</ContentPage>
