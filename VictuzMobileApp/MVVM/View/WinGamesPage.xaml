<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VictuzMobileApp.MVVM.View.WinGamesPage"
             BackgroundColor="Black"
             Title="Win Games">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Slot Machine -->
        <Grid Grid.Row="0" RowSpacing="10">
            <Border BackgroundColor="Gray" Stroke="Gold" StrokeThickness="2" Padding="10" HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>


                <Grid RowDefinitions="Auto" ColumnDefinitions="*,*,*">
                    <!-- Slot 1 -->
                    <Image x:Name="Slot1" Source="win.png" WidthRequest="50" HeightRequest="50" HorizontalOptions="Center" VerticalOptions="Center" />
                    <!-- Slot 2 -->
                    <Image x:Name="Slot2" Source="loss.png" WidthRequest="50" HeightRequest="50" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="1" />
                    <!-- Slot 3 -->
                    <Image x:Name="Slot3" Source="retry.png" WidthRequest="50" HeightRequest="50" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="2" />
                </Grid>
            </Border>
        </Grid>

        <!-- Spin Button -->
        <Button x:Name="SpinButton" Grid.Row="1" Text="SPIN" BackgroundColor="Gold" TextColor="Black" FontSize="20" Padding="10" Clicked="OnSpinButtonClicked" HorizontalOptions="Center" />
    </Grid>
</ContentPage>
