<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:VictuzMobileApp.Controls"
             xmlns:local="clr-namespace:VictuzMobileApp"
             x:Class="VictuzMobileApp.MVVM.View.HomePage"
             Title="HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!-- Profile Section -->
        <StackLayout Grid.Row="0" Orientation="Horizontal" Padding="10">
            <ImageButton Source="{Binding ProfilePicturePath, FallbackValue='person.png'}"
                         HeightRequest="40" WidthRequest="40"
                         Clicked="OnProfileButtonClicked"
                         HorizontalOptions="Start" />
        </StackLayout>

        <!-- Weather and Upcoming Events Section -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10" Spacing="20">
                <Button Text="Ontdek evenementen" 
                        HorizontalOptions="Fill" 
                        Clicked="OnDiscoverButtonClicked" />

                <Label Text="Weer komende dagen:" FontAttributes="Bold" FontSize="16" />

                <!-- Display Weather Information -->
                <StackLayout Padding="10" Spacing="10">
                    <Label x:Name="WeatherDescriptionLabel" 
                           FontSize="14" 
                           HorizontalOptions="Center"
                           TextColor="Black"/>
                    <Label x:Name="TemperatureLabel" 
                           FontSize="14" 
                           HorizontalOptions="Center"
                           TextColor="Black"/>
                    <Label x:Name="HumidityLabel" 
                           FontSize="14" 
                           HorizontalOptions="Center"
                           TextColor="Black"/>
                </StackLayout>

                <Label Text="Aankomende Evenementen" FontAttributes="Bold" FontSize="16" />

                <!-- Corrected BindableLayout for displaying events -->
                <StackLayout Padding="10" Spacing="10">
                    <BindableLayout.ItemsSource>
                        <Binding Path="UpcomingEvents" />
                    </BindableLayout.ItemsSource>
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="DarkCyan"
                                   CornerRadius="10"
                                   Padding="10"
                                   Margin="5">
                                <StackLayout>
                                    <Label Text="{Binding Name}"
                                           FontAttributes="Bold"
                                           FontSize="Medium"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding StartTime, StringFormat='Start: {0:dd MMM yyyy HH:mm}'}"
                                           FontSize="Small"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding Category}"
                                           FontSize="Small"
                                           HorizontalOptions="Center" />
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer Buttons -->
        <Button Grid.Row="1" 
                Text="Uitloggen" 
                Clicked="OnLogoutButtonClicked" 
                BackgroundColor="Transparent"
                TextColor="Black" 
                CornerRadius="8"
                HorizontalOptions="Fill"
                VerticalOptions="End" />

        <Button Grid.Row="2" 
                Text="Open Database Browser" 
                Clicked="OpenDatabaseBrowser" 
                BackgroundColor="DarkCyan" 
                TextColor="White" 
                CornerRadius="8"
                HorizontalOptions="Fill"
                VerticalOptions="Center" />

        <controls:IconBar Grid.Row="3" />
    </Grid>
</ContentPage>
