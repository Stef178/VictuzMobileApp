<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VictuzMobileApp.MVVM.View.DiscoverPage"
             Title="DiscoverPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <SearchBar Grid.Row="0"
                   Placeholder="Zoek evenementen..."
                   TextChanged="OnSearchTextChanged" />

        <Button Grid.Row="1"
        Text="Sorteer op datum"
        Clicked="OnSortButtonClicked"
        Margin="10,5,10,5"
        Padding="10"
        HeightRequest="40"
        HorizontalOptions="Fill" />

        <ScrollView Grid.Row="2" Padding="10">
            <StackLayout BindableLayout.ItemsSource="{Binding FilteredEvents}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="DarkCyan"
                               CornerRadius="10"
                               Padding="10"
                               Margin="5">
                            <StackLayout Spacing="5">
                                <Label Text="{Binding Name}"
                                       FontAttributes="Bold"
                                       FontSize="Medium"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding StartTime, StringFormat='Start: {0:dd MMM yyyy HH:mm}'}"
                                       FontSize="Small"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding Category}"
                                       FontSize="Small"
                                       HorizontalOptions="Center" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
