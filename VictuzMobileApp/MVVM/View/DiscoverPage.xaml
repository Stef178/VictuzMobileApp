<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VictuzMobileApp.MVVM.View.DiscoverPage"
             Title="DiscoverPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0" Padding="10">
            <StackLayout BindableLayout.ItemsSource="{Binding AllEvents}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="DarkCyan"
                               CornerRadius="10"
                               Padding="10"
                               Margin="5">
                            <StackLayout Spacing="5">
                                <Label Text="{Binding Name}"
                                       FontAttributes="Bold"
                                       FontSize="Medium"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding StartTime, StringFormat='Start: {0:dd MMM yyyy HH:mm}'}"
                                       FontSize="Small"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding Category}"
                                       FontSize="Small"
                                       HorizontalOptions="Center" />
                                <Image Source="{Binding PhotoPath}" 
                               HeightRequest="80" 
                               WidthRequest="80" 
                               Aspect="AspectFill" />


                                <Button Text="Details"
                            BackgroundColor="DarkCyan"
                            TextColor="White"
                            CornerRadius="8"
                            Clicked="OnDetailsButtonClicked"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center" />
                                <Button Text="Reserveer"
                            BackgroundColor="DarkCyan"
                            TextColor="White"
                            CornerRadius="8"
                            Clicked="OnReserveTicketClicked"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center" />

                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
