<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:VictuzMobileApp.Controls"
             x:Class="VictuzMobileApp.MVVM.View.DiscoverPage"
             Title="Ontdek">
    <Grid RowDefinitions="*, Auto">
        <!-- Inhoudelijke secties -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- Sectie: Trending -->
                <VerticalStackLayout>
                    <Label Text="Trending" FontSize="20" FontAttributes="Bold" />
                    <Grid ColumnDefinitions="*, *" RowDefinitions="Auto">
                        <!-- Eerste activiteit -->
                        <Border Grid.Column="0" HeightRequest="100" WidthRequest="100" Stroke="Gray" StrokeThickness="1" BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnActivityTapped" />
                            </Border.GestureRecognizers>
                            <Label Text="Activiteit/Evenement" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <!-- Tweede activiteit -->
                        <Border Grid.Column="1" HeightRequest="100" WidthRequest="100" Stroke="Gray" StrokeThickness="1" BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnActivityTapped" />
                            </Border.GestureRecognizers>
                            <Label Text="Activiteit/Evenement" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                    </Grid>
                </VerticalStackLayout>

                <!-- Sectie: Voor jou -->
                <VerticalStackLayout>
                    <Label Text="Voor jou" FontSize="20" FontAttributes="Bold" />
                    <Grid ColumnDefinitions="*, *" RowDefinitions="Auto">
                        <!-- Eerste activiteit -->
                        <Border Grid.Column="0" HeightRequest="100" WidthRequest="100" Stroke="Gray" StrokeThickness="1" BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnActivityTapped" />
                            </Border.GestureRecognizers>
                            <Label Text="Activiteit/Evenement" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <!-- Tweede activiteit -->
                        <Border Grid.Column="1" HeightRequest="100" WidthRequest="100" Stroke="Gray" StrokeThickness="1" BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnActivityTapped" />
                            </Border.GestureRecognizers>
                            <Label Text="Activiteit/Evenement" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                    </Grid>
                </VerticalStackLayout>

                <!-- Win Games knop -->
                <Button Text="Win Games" BackgroundColor="DarkCyan" TextColor="White" FontAttributes="Bold"
                        HorizontalOptions="Center" WidthRequest="200" HeightRequest="50" 
                        Clicked="OnWinGamesButtonClicked" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- IconBar Navigatie -->
        <controls:IconBar Grid.Row="1" />
    </Grid>
</ContentPage>
